<div class="topic_index_wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="tipic-index-single">
          <h2 class="topic-author">
            <%= topic.user.name %>
          </h2>
          <%= image_tag topic.image.url %>
          <%= image_tag "icons/comment.png", class: "topic-index-icon"  %>
          <p class="topic-text">
            <%= topic.description %>
          </p>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>